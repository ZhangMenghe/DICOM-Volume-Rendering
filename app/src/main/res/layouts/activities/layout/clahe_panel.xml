<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/paneColor"
    android:fillAfter="true"
    android:fillEnabled="true"
    android:alpha="0.8"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/topPanel">


    <CheckBox
        android:id="@+id/check_clahe_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="@string/clahe_check_name"
        android:theme="@style/CommonCheckBox"
        android:textColor="@color/brightBlue"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/sel_clahe_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintStart_toEndOf="@+id/check_clahe_enabled"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Spinner"/>
    <Spinner
        android:id="@+id/clahe_variable_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_clahe_enabled"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Spinner"/>
    <Spinner
        android:id="@+id/clahe_variable_sub_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/clahe_variable_spinner"
        app:layout_constraintTop_toBottomOf="@+id/check_clahe_enabled"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Spinner"/>
    <TextView
        android:id="@+id/clahe_variable_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:text="value:"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clahe_variable_sub_spinner"/>
    <Button
        android:id="@+id/clahe_apply_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/visible"
        app:layout_constraintTop_toBottomOf="@+id/sel_clahe_spinner"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintDimensionRatio="1:1"
        style="@style/CommonButton"/>
    <Button
        android:id="@+id/clahe_drop_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/down_icon"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"

        app:layout_constraintTop_toBottomOf="@+id/sel_clahe_spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/clahe_apply_btn"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintDimensionRatio="1:1"
        style="@style/CommonButton"/>
    <Button
        android:id="@+id/clahe_up_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/up_icon"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@+id/sel_clahe_spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clahe_drop_btn"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintDimensionRatio="1:1"
        style="@style/CommonButton"/>

</android.support.constraint.ConstraintLayout>

