<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/paneColor"
    android:fillAfter="true"
    android:fillEnabled="true"
    android:alpha="0.8"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/topPanel">
    <CheckBox
        android:id="@+id/check_clahe_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="@string/clahe_check_name"
        android:theme="@style/CommonCheckBox"
        android:textColor="@color/brightBlue"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/sel_clahe_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintStart_toEndOf="@+id/check_clahe_enabled"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Spinner"/>
</android.support.constraint.ConstraintLayout>

