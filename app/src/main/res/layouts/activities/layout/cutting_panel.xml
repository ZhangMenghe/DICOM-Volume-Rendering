<?xml version="1.0" encoding="utf-8"?>
<!--debug:review the style-->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/paneColor"
    android:fillAfter="true"
    android:fillEnabled="true"
    app:layout_constraintHeight_percent="0.15"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/paneColor"
        android:fillAfter="true"
        android:fillEnabled="true"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/layout_check_cutting"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CheckBox
                android:id="@+id/check_cutting_show"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/cutting_check_name"
                android:theme="@style/CommonCheckBox"
                android:textColor="@color/brightBlue"/>
            <CheckBox
                android:id="@+id/check_traversal_show"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/cutting_traversal_name"
                android:theme="@style/CommonCheckBox"
                android:textColor="@color/brightBlue"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_cutting_plane"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toEndOf="@id/layout_check_cutting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <Spinner
            android:id="@+id/spinner_check_cutting_control"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:spinnerMode="dropdown"
            style="@style/Spinner"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_traversal_plane"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toEndOf="@id/layout_check_cutting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Switch
                android:id="@+id/toggle_view_switch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:text="CuttingView   "
                android:textColor="@color/brightBlue"
                style="@style/SCBSwitch"/>
        </LinearLayout>

    <SeekBar
        android:id="@+id/cutting_seekbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:theme="@style/Seekbar"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/midBlue"
        android:fillAfter="true"
        android:fillEnabled="true"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/cut_prev_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/up_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="1:1"
            style="@style/CommonButton"/>
        <Button
            android:id="@+id/cut_next_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"

            android:background="@drawable/down_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintDimensionRatio="1:1"
            style="@style/CommonButton"/>
    </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
