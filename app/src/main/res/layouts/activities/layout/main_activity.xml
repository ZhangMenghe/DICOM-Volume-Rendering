<!--    bottom panel: organ masks-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/maskPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/paneColor"
        android:fillAfter="true"
        android:fillEnabled="true"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/mask_hide_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/down_icon"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mask_recycle"
            android:scrollbars="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.8"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <!--    bottom panel: organ masks-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/hiddenBottomPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/paneTransColor"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/show_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/up_icon"
            app:layout_constraintHeight_percent="0.99"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>
    </android.support.constraint.ConstraintLayout>

