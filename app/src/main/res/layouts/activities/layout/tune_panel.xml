<?xml version="1.0" encoding="utf-8"?>
<!--debug:review the style-->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/paneColor"
    android:fillAfter="true"
    android:fillEnabled="true"
    android:alpha="0.8"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/topPanel">
<android.support.constraint.ConstraintLayout
    android:id="@+id/panel1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <Spinner
        android:id="@+id/contrast_seekbar_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Spinner"/>
</android.support.constraint.ConstraintLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/panel1">
    <Spinner
        android:id="@+id/tune_widget_id_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Spinner"/>
    <Spinner
        android:id="@+id/tune_seekbar_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Spinner"/>
    <Button
        android:id="@+id/tune_widget_add_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_weight="0.5"
        style="@style/CommonButton"/>
    <Button
        android:id="@+id/tune_widget_delete_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Del"
        android:layout_weight="0.5"
        style="@style/CommonButton"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
